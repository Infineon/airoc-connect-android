<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/temp_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/button_image"
        android:layout_width="@dimen/big_icon"
        android:layout_height="@dimen/big_icon"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:contentDescription="@string/capsense_button_item"
        android:src="@drawable/capsense_btn_bg"
        app:tint="@color/accent" />

    <TextView
        android:id="@+id/txtItem"
        style="@style/Infineon.TextView.ValueStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:text="1"
        android:textColor="@color/light_button_text"
        android:textSize="@dimen/text_size_large" />

</RelativeLayout>

